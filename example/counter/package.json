{
  "name": "helix-basic",
  "version": "1.0.0",
  "description": "Basic example of helix",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "budo ./src/index.ts --live --pushstate --host=localhost --port=8888 --base=/ --css ./node_modules/bulma/css/bulma.css -- -t [ babelify ] -p [ tsify ]",
    "dist": "tsc && npm run browserify && npm run minify",
    "browserify": "browserify -g babelify -g uglifyify dist/index.js -o dist/bundle.js",
    "minify": "uglifyjs ./dist/bundle.js --compress --mangle -o ./dist/bundle.min.js"
  },
  "author": "Joseph Luck",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babelify": "^7.3.0",
    "budo": "^9.4.7",
    "tsify": "^3.0.1",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "@types/node": "^7.0.5",
    "babel": "^6.23.0",
    "browserify": "^14.1.0",
    "bulma": "^0.3.2",
    "tslint-config-standard": "^4.0.0",
    "uglifyify": "^3.0.4",
    "uglifyjs": "^2.4.10"
  }
}
