{
  "name": "helix-example",
  "version": "1.0.0",
  "description": "Blog example of helix",
  "main": "./src/index.ts",
  "scripts": {
    "start": "budo ./src/index.ts --live --pushstate --host=localhost --port=8888 --base=/ --css ./node_modules/tachyons/css/tachyons.css -- -t babelify -p tsify",
    "build": "rm -rf dist && mkdir dist && mkdir dist/assets && npm run browserify && npm run minify && npm run assets",
    "assets": "cp dist.html dist/index.html && cp dist.html dist/200.html && cp dist.html dist/404.html",
    "browserify": "browserify src/index.ts -p [ tsify ] -o dist/assets/index.js",
    "minify": "uglifyjs ./dist/assets/index.js --compress --mangle -o ./dist/assets/index.js",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "deploy": "surge ./dist helix-blog.surge.sh"
  },
  "author": "Joseph Luck",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^9.4.7",
    "faker": "^4.1.0",
    "moment": "^2.17.1",
    "tachyons": "^4.6.2",
    "tsify": "^3.0.3",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "prettier": "^1.8.2",
    "serve": "^6.4.1",
    "tslint-config-prettier": "^1.6.0",
    "uglify-js": "^3.1.10"
  }
}
