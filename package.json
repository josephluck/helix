{
  "name": "helix-js",
  "version": "1.1.4",
  "description": "Functional front-end UI framework",
  "main": "lib/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/josephluck/helix"
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "ts-node node_modules/.bin/tape ./test/index.spec.ts | tap-spec",
    "dist": "rm -rf ./lib && mkdir lib && tsc && npm run browserify && npm run minify",
    "browserify": "browserify -g babelify lib/index.js -o lib/bundle.js",
    "minify": "uglifyjs lib/bundle.js -c -m -o lib/bundle.min.js",
    "deploy": "npm run dist && npm publish"
  },
  "author": "Joseph Luck",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "tsify": "^3.0.1",
    "tslint": "^4.4.2",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "qs": "^6.4.0",
    "rlite-router": "^2.0.1",
    "sheet-router": "^4.2.3",
    "twine-js": "^1.3.0"
  }
}
