{
  "name": "helix-js",
  "version": "1.5.0",
  "description": "Functional front-end UI framework",
  "main": "lib/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/josephluck/helix"
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "tsc --project tsconfig.test.json && nightwatch",
    "test-server": "tsc --project tsconfig.test.json && ts-node ./tests/run-test-server.ts",
    "dist": "rm -rf ./lib && mkdir lib && tsc && npm run browserify && npm run minify",
    "browserify": "browserify -g babelify lib/index.js -o lib/bundle.js",
    "minify": "uglifyjs lib/bundle.js -c -m -o lib/bundle.min.js",
    "deploy": "npm run dist && npm publish",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "build-examples": "cd ./examples/blog && npm run build && cd ../../",
    "deploy-examples": "cd ./examples/blog && npm run deploy && cd ../../",
    "build-and-deploy-examples": "npm run build-examples && npm run deploy-examples"
  },
  "author": "Joseph Luck",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/qs": "^6.5.1",
    "babel": "^6.23.0",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^10.0.4",
    "electron": "1.7.6",
    "jest": "^21.1.0",
    "prettier": "^1.8.2",
    "ts-jest": "^21.0.1",
    "tsify": "^3.0.3",
    "tslint": "^4.4.2",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.2.1",
    "uglify-js": "^2.7.5",
    "yo-yo": "^1.4.1"
  },
  "dependencies": {
    "@types/nightwatch": "^0.9.3",
    "chromedriver": "^2.33.2",
    "nightwatch": "^0.9.16",
    "qs": "^6.4.0",
    "rlite-router": "^2.0.1",
    "selenium-server": "^3.7.1",
    "sheet-router": "^4.2.3",
    "ts-node": "^3.3.0",
    "twine-js": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}