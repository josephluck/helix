{
  "name": "helix-js",
  "version": "1.4.1",
  "description": "Functional front-end UI framework",
  "main": "lib/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/josephluck/helix"
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "test-server": "budo ./src/test-app.ts --pushstate --base='/' -p 1234 -- -p [tsify]",
    "dist": "rm -rf ./lib && mkdir lib && tsc && npm run browserify && npm run minify",
    "browserify": "browserify -g babelify lib/index.js -o lib/bundle.js",
    "minify": "uglifyjs lib/bundle.js -c -m -o lib/bundle.min.js",
    "deploy": "npm run dist && npm publish"
  },
  "author": "Joseph Luck",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "tsify": "^3.0.3",
    "tslint": "^4.4.2",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "@types/jest": "^20.0.8",
    "babel": "^6.23.0",
    "babelify": "^7.3.0",
    "budo": "^10.0.4",
    "electron": "1.7.6",
    "jest": "^21.1.0",
    "nightmare": "^2.10.0",
    "qs": "^6.4.0",
    "rlite-router": "^2.0.1",
    "sheet-router": "^4.2.3",
    "ts-jest": "^21.0.1",
    "twine-js": "^1.9.0",
    "yo-yo": "^1.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}